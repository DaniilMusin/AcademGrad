# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DB_URL=postgresql://postgres:password@localhost:5432/postgres

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
LLM_MODEL=gpt-4o-mini

# =============================================================================
# STRIPE PAYMENTS
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID=price_your-price-id

# =============================================================================
# TELEGRAM BOT
# =============================================================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# =============================================================================
# EMAIL CONFIGURATION (Choose one)
# =============================================================================
# Postmark
POSTMARK_API_TOKEN=your-postmark-token
POSTMARK_FROM_EMAIL=noreply@yourdomain.com

# Resend (alternative)
RESEND_API_KEY=re_your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# =============================================================================
# AWS S3 (для хранения файлов)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=your-bucket-name

# =============================================================================
# REDIS CACHING
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# PROMETHEUS METRICS
# =============================================================================
PROMETHEUS_GATEWAY_URL=http://localhost:9091
PROMETHEUS_JOB_NAME=academgrad

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_VERCEL_URL=your-vercel-url.vercel.app

# =============================================================================
# CRON & SCHEDULING
# =============================================================================
CRON_SECRET=your-cron-secret-key

# =============================================================================
# YOOKASSA (альтернатива Stripe для России)
# =============================================================================
YOOKASSA_SHOP_ID=your-yookassa-shop-id
YOOKASSA_SECRET_KEY=your-yookassa-secret-key

# =============================================================================
# GITHUB ACTIONS (для CI/CD)
# =============================================================================
GITHUB_TOKEN=your-github-token
GITHUB_REPO=your-username/your-repo-name
