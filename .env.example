# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DB_URL=postgresql://postgres:password@localhost:5432/postgres

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# YOOKASSA CONFIGURATION
# =============================================================================
YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key
YOOKASSA_WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# =============================================================================
# EMAIL CONFIGURATION (POSTMARK)
# =============================================================================
POSTMARK_TOKEN=your-postmark-token
POSTMARK_FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# =============================================================================
# PWA CONFIGURATION
# =============================================================================
NEXT_PUBLIC_PWA_NAME="EGE AI Platform"
NEXT_PUBLIC_PWA_SHORT_NAME="EGE AI"
NEXT_PUBLIC_PWA_DESCRIPTION="AI-powered learning platform for EGE preparation"

# =============================================================================
# DOMAIN & URLS
# =============================================================================
NEXT_PUBLIC_DOMAIN=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_DEBUG=false

# =============================================================================
# REDIS CONFIGURATION (if using Redis for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-nextauth-secret

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CONTENT SECURITY
# =============================================================================
CONTENT_SECURITY_POLICY_NONCE=random-nonce-value

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ERROR_REPORTING=true
